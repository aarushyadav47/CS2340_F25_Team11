<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F7">

        <!-- Title -->
        <TextView
            android:id="@+id/expenseLog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Expense Log"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Placheolder UI -->
        <FrameLayout
            android:id="@+id/expenseLog_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/expenseLog_title"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Expense Log Content Goes Here"
                android:textColor="#AAAAAA"
                android:textSize="16sp" />

        </FrameLayout>

        <!-- Bottom Navi Bar -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Dashboard Button -->
            <LinearLayout
                android:id="@+id/dashboard_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    app:tint="#888888"/>

            </LinearLayout>

            <!-- Expense Log Button -->
            <LinearLayout
                android:id="@+id/expenseLog_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expense_log"
                    android:contentDescription="Expense Log"
                    app:tint="#000000"/>

                <View
                    android:layout_width="32dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#000000"/>

            </LinearLayout>

            <!-- Budgets Button -->
            <LinearLayout
                android:id="@+id/budget_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_budget"
                    android:contentDescription="Budgets"
                    app:tint="#888888"/>

            </LinearLayout>

            <!-- Saving Circle Button -->
            <LinearLayout
                android:id="@+id/savingCircle_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_savings"
                    android:contentDescription="Saving Circle"
                    app:tint="#888888"/>

            </LinearLayout>

            <!-- Chatbot Button -->
            <LinearLayout
                android:id="@+id/chatbot_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat"
                    android:contentDescription="Chatbot"
                    app:tint="#888888"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Add Expense Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_expense_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Add Expense"
            android:backgroundTint="#000000"
            app:tint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expenseLog_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>