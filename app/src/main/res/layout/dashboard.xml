<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F7">

        <!-- Title -->
        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Dashboard"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Content Area -->
        <FrameLayout
            android:id="@+id/dashboard_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/dashboard_title"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/current_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: YYYY-MM-DD"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/calendar_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:contentDescription="Select current date"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/weekly_total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This week: $0.00"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/monthly_total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This month: $0.00"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/category_totals_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By category:"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:layout_marginTop="24dp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#000000"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </FrameLayout>

        <!-- Bottom Navi Bar -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Dashboard Button -->
            <LinearLayout
                android:id="@+id/dashboard_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    app:tint="#000000"/>

                <View
                    android:layout_width="32dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#000000"/>

            </LinearLayout>

            <!-- Expense Log Button -->
            <LinearLayout
                android:id="@+id/expenseLog_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expense_log"
                    android:contentDescription="Expense Log"
                    app:tint="#888888"/>

            </LinearLayout>

            <!-- Budgets Button -->
            <LinearLayout
                android:id="@+id/budget_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_budget"
                    android:contentDescription="Budgets"
                    app:tint="#888888"/>

            </LinearLayout>

            <!-- Saving Circle Button -->
            <LinearLayout
                android:id="@+id/savingCircle_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_savings"
                    android:contentDescription="Saving Circle"
                    app:tint="#888888"/>

            </LinearLayout>

            <!-- Chatbot Button -->
            <LinearLayout
                android:id="@+id/chatbot_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat"
                    android:contentDescription="Chatbot"
                    app:tint="#888888"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>