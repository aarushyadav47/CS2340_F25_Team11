<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F7">

        <!-- Top Bar with Calendar and Logout -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Calendar Date Selector -->
            <LinearLayout
                android:id="@+id/calendar_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/calendar_selector_bg"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Calendar"
                    app:tint="#000000"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Date"
                        android:textSize="11sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/selected_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 21, 2025"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:contentDescription="Select Date"
                    app:tint="#666666"/>
            </LinearLayout>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:text="Logout"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5252"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_logout"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="4dp"/>
        </LinearLayout>

        <!-- Dashboard Title -->
        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Dashboard"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bar" />

        <!-- Main Content ScrollView -->
        <ScrollView
            android:id="@+id/dashboard_scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/dashboard_title"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Total Spent Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Spent this Period"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/total_spent_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="$0.00"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/period_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Current Period: Oct 1 - Oct 31"
                            android:textSize="12sp"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Remaining Budgets Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/remaining_budgets_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:text="View Remaining Budgets"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    app:icon="@drawable/ic_budget"
                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"/>

                <!-- Remaining Budgets List (Initially Hidden) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/remaining_budgets_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"/>

                <!-- Budget Categories Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="Budget Overview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1: Weekly and Monthly Budget -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/weekly_budget_card"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_calendar"
                                    android:contentDescription="Weekly"
                                    app:tint="#2196F3"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Weekly Budget"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:textAlignment="center"/>

                                <TextView
                                    android:id="@+id/weekly_budget_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="$0.00"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/monthly_budget_card"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_calendar"
                                    android:contentDescription="Monthly"
                                    app:tint="#9C27B0"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Monthly Budget"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:textAlignment="center"/>

                                <TextView
                                    android:id="@+id/monthly_budget_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="$0.00"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Quick Actions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="Quick Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/add_expense_card"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_expense_log"
                                    android:contentDescription="Add Expense"
                                    app:tint="#FF5722"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Add Expense"
                                    android:textSize="13sp"
                                    android:textColor="#000000"
                                    android:textAlignment="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/add_budget_card"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_budget"
                                    android:contentDescription="Add Budget"
                                    app:tint="#4CAF50"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Add Budget"
                                    android:textSize="13sp"
                                    android:textColor="#000000"
                                    android:textAlignment="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Dashboard Button -->
            <LinearLayout
                android:id="@+id/dashboard_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    app:tint="#000000"/>

                <View
                    android:layout_width="32dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#000000"/>
            </LinearLayout>

            <!-- Expense Log Button -->
            <LinearLayout
                android:id="@+id/expenseLog_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expense_log"
                    android:contentDescription="Expense Log"
                    app:tint="#888888"/>
            </LinearLayout>

            <!-- Budgets Button -->
            <LinearLayout
                android:id="@+id/budget_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_budget"
                    android:contentDescription="Budgets"
                    app:tint="#888888"/>
            </LinearLayout>

            <!-- Saving Circle Button -->
            <LinearLayout
                android:id="@+id/savingCircle_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_savings"
                    android:contentDescription="Saving Circle"
                    app:tint="#888888"/>
            </LinearLayout>

            <!-- Chatbot Button -->
            <LinearLayout
                android:id="@+id/chatbot_navigate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat"
                    android:contentDescription="Chatbot"
                    app:tint="#888888"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>